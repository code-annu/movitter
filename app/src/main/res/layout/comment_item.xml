<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:id="@+id/ci_mainContainerGL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ci_avatarIV"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="top"
        android:contentDescription="@string/image_desc"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_rowSpan="2"/>

    <TextView
        android:id="@+id/ci_fullnameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:maxWidth="200dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_column="1"
        android:layout_row="0"
        style="@style/MediumTitleText"/>

    <View
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:background="@drawable/dominant_circle"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_column="2"
        android:layout_row="0" />

    <TextView
        android:id="@+id/ci_uploadTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dominant"
        android:layout_gravity="start|center_vertical"
        android:layout_column="3"
        android:layout_row="0"
        style="@style/RegularText"/>

    <TextView
        android:id="@+id/ci_commentTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/dominant"
        android:layout_gravity="start|center_vertical"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_columnSpan="3"
        android:textSize="13sp"
        style="@style/MediumText"/>

    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="#80657786"
        android:layout_column="0"
        android:layout_margin="20dp"
        android:layout_columnSpan="4"
        android:layout_row="2"/>

</GridLayout>