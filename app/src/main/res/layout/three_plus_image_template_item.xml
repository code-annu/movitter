<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="2">

    <ImageView
        android:id="@+id/thpiti_imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@color/primary_dark"
        android:layout_marginEnd="5dp"
        android:contentDescription="@string/image_desc"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_rowSpan="2" />

    <ImageView
        android:id="@+id/thpiti_imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@color/primary_dark"
        android:contentDescription="@string/image_desc"
        android:scaleType="centerCrop"
        android:layout_marginBottom="5dp"
        android:adjustViewBounds="true"
        android:layout_column="1"
        android:layout_row="0" />


    <ImageView
        android:id="@+id/thpiti_imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@color/primary_dark"
        android:contentDescription="@string/image_desc"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_column="1"
        android:layout_row="1" />


    <TextView
        android:id="@+id/thpiti_restImageCounterTV"
        android:text="5+"
        android:textColor="@color/primary"
        android:gravity="center"
        style="@style/BoldExtraLargeText"
        android:background="@color/secondary_semi_transparent"
        android:layout_column="1"
        android:layout_row="1"/>


</GridLayout>