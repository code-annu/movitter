<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:id="@+id/pi_mainContainerGL"
    android:background="@drawable/bg_primary_ripple"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/pi_avatarIV"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/tmep"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/image_desc"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_rowSpan="2"/>

    <TextView
        android:id="@+id/pi_fullnameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:text="Anurag Rajput"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_column="1"
        android:layout_row="0"
        style="@style/BoldText"/>

    <View
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:background="@drawable/dominant_circle"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_column="2"
        android:layout_row="0" />

    <TextView
        android:id="@+id/pi_uploadTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19h"
        android:textColor="@color/dominant"
        android:layout_gravity="start|center_vertical"
        android:layout_column="3"
        android:layout_row="0"
        style="@style/RegularText"/>

    <TextView
        android:id="@+id/pi_movieTitleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Game of Thrones"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="start|center_vertical"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_columnSpan="3"
        style="@style/MediumTitleText"/>

    <TextView
        android:id="@+id/pi_movieDescriptionTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="20dp"
        android:text="This is the best series of HBO Production house. Jon Snow is Aegon Targarean."
        style="@style/RegularText"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_columnSpan="3"/>

    <TextView
        android:id="@+id/pi_movieGenresTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="20dp"
        android:text="Action | Drama | Adult | History Drama | Horror"
        android:textColor="@color/dominant"
        android:fontFamily="@font/poppins_medium"
        android:textSize="13sp"
        android:layout_column="1"
        android:layout_row="3"
        android:layout_columnSpan="3"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pi_imageContainerCV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:strokeWidth="0dp"
        app:cardCornerRadius="@dimen/corner_radius"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="10dp"
        android:layout_column="1"
        android:layout_row="4"
        android:layout_columnSpan="3">

        <LinearLayout
            android:id="@+id/pi_imageContainerLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/pi_actionContainerLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginEnd="70dp"
        android:layout_column="1"
        android:layout_row="5"
        android:layout_columnSpan="3">
        
        <CheckBox
            android:id="@+id/pi_likeCB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120K"
            android:button="@drawable/ic_like_selector"
            app:buttonTint="@color/dominant_to_red_color"
            android:textColor="@color/dominant_to_red_color"
            android:fontFamily="@font/inter_medium"
            android:textSize="13sp"/>

        <CheckBox
            android:id="@+id/pi_commentCB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13.5k"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:button="@drawable/ic_comment"
            android:textColor="@color/dominant"
            app:buttonTint="@color/dominant"
            android:fontFamily="@font/inter_medium"
            android:textSize="13sp"/>

        <CheckBox
            android:id="@+id/pi_bookmarkCB"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:button="@drawable/ic_bookmark_selector"
            app:buttonTint="@color/dominant_to_accent_color"/>

    </LinearLayout>

</GridLayout>