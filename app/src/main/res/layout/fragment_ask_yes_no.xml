<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_primary_rounded"
    android:paddingTop="15dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="15dp"
    tools:context=".ui_components.bottom_sheet_fragments.AskYesNoFragment">


    <View
        android:layout_width="50dp"
        android:layout_height="3dp"
        android:background="@drawable/bg_dominant_rounded"
        android:layout_columnSpan="2"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/fayn_titleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        style="@style/MediumLargeText"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnSpan="2"/>

    <TextView
        android:id="@+id/fayn_messageTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        style="@style/RegularText"
        android:textColor="@color/dominant"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_columnSpan="2"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acp_yesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yes"
        style="@style/RedButtonStyle"
        android:layout_columnWeight="1"
        android:layout_marginEnd="20dp"
        android:layout_gravity="end"
        android:layout_column="0"
        android:layout_row="3"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acp_noBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no"
        style="@style/AccentButtonStyle"
        android:layout_gravity="center_horizontal"
        android:layout_column="1"
        android:layout_row="3"/>


</GridLayout>