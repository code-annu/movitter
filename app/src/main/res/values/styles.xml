<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RegularSmallText">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="RegularText">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="RegularTitleText">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="MediumSmallText">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="MediumText">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="MediumTitleText">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="MediumLargeText">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="MediumExtraLargeText">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="BoldText">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="BoldLargeText">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="BoldTitleText">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="BoldExtraLargeText">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>


    <!-- View styles -->
    <style name="InputBoxLayoutStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">true</item>
        <item name="cursorColor">@color/secondary</item>
    </style>

    <style name="InputBoxEditTextStyle">
       <item name="android:textColorHint">@color/helper</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="BlueButtonStyle">
        <item name="android:background">@drawable/bg_accent_btn</item>
        <item name="android:textColor">#f5f8fa</item>
        <item name="android:textAppearance">@style/MediumText</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="AccentButtonStyle">
        <item name="android:background">@drawable/bg_accent_btn</item>
        <item name="android:textColor">#f5f8fa</item>
        <item name="android:textAppearance">@style/MediumText</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="RedButtonStyle">
        <item name="android:background">@drawable/bg_red_btn</item>
        <item name="android:textColor">#f5f8fa</item>
        <item name="android:textAppearance">@style/MediumText</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="AccentSmallButtonStyle">
        <item name="android:background">@drawable/bg_accent_btn</item>
        <item name="android:textColor">#f5f8fa</item>
        <item name="android:textAppearance">@style/MediumText</item>
    </style>

    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius</item>
    </style>

    <style name="Temp" parent="Widget.Material3.SearchView">
        <item name="divider">@android:color/transparent</item>
    </style>






</resources>